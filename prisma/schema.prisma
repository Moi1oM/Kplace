generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String    @id @default(cuid(2))
  clerkId              String    @unique
  username             String?
  lastPixelTime        DateTime?
  pixelWindowStartTime DateTime?
  pixelCount           Int       @default(0)
  pixels               Pixel[]
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt
}

model Pixel {
  id        String   @id @default(cuid(2))
  x         Int
  y         Int
  color     String // Hex color code (e.g., "#FF0000")
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  isActive  Boolean  @default(true) // Current pixel at this position
  createdAt DateTime @default(now())

  @@unique([x, y, createdAt]) // Preserve history
  @@index([x, y, isActive]) // Fast queries for active pixels
  @@index([userId]) // Fast queries by user
}